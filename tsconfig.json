{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ESNext",
    "moduleResolution": "node",
    "importHelpers": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": ".",
    "strict": true,
    "skipLibCheck": true,
    "lib": [
      "DOM",
      "ESNext",
    ],
    "experimentalDecorators": true,
    "paths": {
      "~/*": ["src/*"],
      "@/*": ["src/*"],
      "ssr-style-loader": ["src/utils/ssr-style-loader"]
    },
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"]
}
